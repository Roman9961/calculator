{% extends 'default/default.html.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-auto">
            <h1>{{ product.name }}</h1>
        </div>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-auto">
            <form action="/api/calculate" name="person" id="product">
                <input type="hidden" name="product_id" value="{{ product.id }}">
                <div class="form-group">
                    <select name="paper" id="paper" class="form-control">
                        {% for paper in product.papers %}
                            <option value="{{ paper.id }}">{{ paper.name }} {{ paper.density }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <select name="print_type" id="print_type" class="form-control">
                        {% for printType in product.printTypes %}
                            <option value="{{ printType.id }}">{{ printType.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <select name="coat" id="coat"  class="form-control">
                        <option value="0">None</option>
                        {% for coat in coats %}
                            <option value="{{ coat.id }}">{{ coat.name }}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-inline">
                    {% if product.defaultWidth and product.defaultHeight %}
                    <div class="form-group mb-3">
                        <input type="number" value="{{ product.defaultHeight }}" name="sizex" class="form-control">
                    </div>
                    <div class="form-group ml-1 mr-1 mb-3">
                        x
                    </div>
                    <div class="form-group mb-3">
                       <input type="number" name="sizey" value="{{ product.defaultWidth }}"  class="form-control">
                    </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {% if product.defaultCount %}
                        <input type="text" value="{{ product.defaultCount }}" name="count"  class="form-control">
                    {% endif %}
                </div>
                <div class="form-group">
                    <input type="text" value="1" name="sheets"  class="form-control">
                </div>
                <div class="form-check">
                    <input type="checkbox" name="sample" class="form-check-input" id="sample">
                    <label class="form-check-label" for="sample">попередньо виготовим тестовий зразок</label>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <h1> <span class="badge badge-success" id="result"></span></h1>
                </div>
            </form>
        </div>
        {#col#}
    </div>
    {#row#}
</div>
{#containrer#}


{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('product') }}
{% endblock %}


